// ---- METADATA ----
// Target: ~/.config/Code/User/settings.json
// Author: Hentioe (绅士喵)
// CreatedAt: 2019-03-27
// UpdatedAt: 2023-08-04
// ---- METADATA ----
{
    // 终端中选定的文本复制到剪贴板
    "terminal.integrated.copyOnSelection": true,
    // 滚动时使用动画
    "editor.smoothScrolling": true,
    // 启用平滑插入动画
    "editor.cursorSmoothCaretAnimation": "on",
    // 编辑区字体
    "editor.fontFamily": "'Jetbrains Mono', 'Noto Sans Mono CJK SC'",
    "editor.fontSize": 16,
    // 终端字体
    "terminal.integrated.fontFamily": "'Noto Sans Mono CJK SC'",
    "terminal.integrated.fontSize": 15,
    // 连字支持
    "editor.fontLigatures": true,
    // 自动保存
    "files.autoSave": "afterDelay",
    // 扩展自动更新
    "extensions.autoUpdate": true,
    // 启动时打开无标题新文件
    "workbench.startupEditor": "newUntitledFile",
    // 自动获取最新提交
    "git.autofetch": true,
    // 针对文件类型的独立配置
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // 文件后缀和类型关联
    "files.associations": {
        "*.html.ecr": "html"
    },
    // 删除文件无需确认
    "explorer.confirmDelete": false,
    // Javascript
    // 图标主题
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.untitled.hint": "hidden",
    // 忽略 Office viewer 对某些文件类型的支持。
    "workbench.editorAssociations": {
        "*.png": "imagePreview.previewEditor",
        "*.md": "default",
    },
    "workbench.editor.enablePreview": false,
    "redhat.telemetry.enabled": true,
    "editor.semanticHighlighting.enabled": true,
    "nixEnvSelector.suggestion": false,
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "githubPullRequests.remotes": [
        "origin",
        "upstream",
        "github"
    ],
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "[dockercompose]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "git.enableSmartCommit": true,
    "[html-eex]": {
        "editor.defaultFormatter": "JakeBecker.elixir-ls"
    },
    "git.confirmSync": false,
    "[scss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "editor.inlineSuggest.enabled": true,
    "workbench.colorTheme": "Eva Dark",
    "update.mode": "none",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false,
        "yaml": true
    },
    "svg.preview.mode": "svg",
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "markdown-pdf.executablePath": "google-chrome-stable",
    "http.proxySupport": "off",
    "githubPullRequests.pullBranch": "never",
    "[python]": {
        "editor.formatOnType": true
    }
}